{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2021",
    "lib": ["esnext", "dom"],
    "strict": true,
    "composite": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  }
}